#  This is from a clean install, no updates, minimal installation.
#  For use of "The Art of Machine Learning" No Starch Press 
#
#  Fully update the machine:
#  sudo apt update && sudo apt upgrade -y
#  Install uninstalled packages
#  sudo su

sudo apt-get install cmake
sudo apt-get install libpng-dev
sudo apt install python3-pip -y
sudo apt install python3-venv -y
python3 -m venv myvenv
source myvenv/bin/activate
pip install tensorflow
pip install keras
deactivate

#!/bin/bash
# Update package indices
sudo apt-get update -qq

# Install necessary helper packages
sudo apt-get install --no-install-recommends software-properties-common dirmngr wget

# Add the CRAN repository signing key
wget -qO- https://cloud.r-project.org/bin/linux/ubuntu/marutter_pubkey.asc | sudo tee /etc/apt/trusted.gpg.d/cran_ubuntu_key.asc

# Add the R repository (adjust 'focal' for your Ubuntu version, e.g., bionic, groovy)
sudo add-apt-repository "deb https://cloud.r-project.org/bin/linux/ubuntu $(lsb_release -cs)-cran40/"

# Update package indices after adding new repository
sudo apt-get update

# Install R base package and essential tools
sudo apt-get install --no-install-recommends r-base

# Add repository for updated R packages - Ensure compatibility with your system
sudo add-apt-repository ppa:c2d4u.team/c2d4u4.0+ && sudo apt-get update

# Install R packages from the repository
sudo apt-get install --no-install-recommends r-cran-rstan r-cran-tidyverse

# Install development tools and libraries necessary for R package compilation
# Merged duplicate library installation lines and added unique ones
sudo apt-get install libcurl4-openssl-dev libssl-dev libxml2-dev libgit2-dev build-essential gfortran libblas-dev liblapack-dev libarmadillo-dev libnlopt-dev libgmp-dev

# Upgrade specific packages if necessary, rather than a full system upgrade to avoid potential conflicts
# sudo apt-get upgrade -y [specific packages] # Uncomment and replace [specific packages] with actual package names if needed

echo "Ubuntu setup for R is complete."
